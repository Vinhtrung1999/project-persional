<link rel="stylesheet" href="/css/addCustomer.css">
<h2 class="text-center" style="padding: 10px;" id="head">Add Customer</h2>

<div class="block-add f-1-2">
    <div class="block-add-item">
        <div class="block-add-item-title">CMND/CCCD</div>
        <div class="block-add-item-content">
            <input class="input-custom f-1-2" type="number" placeholder="Enter CMND" id="CMND" name="CMND" required>
        </div>
    </div>
    <div class="block-add-item">
        <div class="block-add-item-title">Name</div>
        <div class="block-add-item-content">
            <input class="input-custom f-1-2" type="text" id="name" placeholder="Enter name" name="name" required>
        </div>
    </div>
    <div class="block-add-item">
        <div class="block-add-item-title">Gender</div>
        <div class="block-add-item-content">
            <select class="input-custom f-1-2" name="gender" id="gender">
                <option value="0">Male</option>
                <option value="1">Femail</option>
            </select>
        </div>
    </div>
    <div class="block-add-item">
        <div class="block-add-item-title">Tel</div>
        <div class="block-add-item-content">
            <input class="input-custom f-1-2" type="tel" placeholder="Enter tel" id="tel" name="tel" required>
        </div>
    </div>
    <div class="block-add-item">
        <div class="block-add-item-title">Email</div>
        <div class="block-add-item-content">
            <input class="input-custom f-1-2" type="email" placeholder="Enter email" id="email" name="email" required>
        </div>
    </div>

    <!-- button -->
    <div class="t-center">
        <button type="button" id="btn" class="btn-custom f-1-2 bg-green cl-white">
            <i class="fa-solid fa-plus"></i>
        </button>
        <div id="mess" class="success"></div>
        <div id="err" class="err"></div>
    </div>
</div>


<script>
    var btn = document.getElementById('btn')

    btn.addEventListener('click', () =>{
        document.getElementById('mess').innerHTML = ""
        document.getElementById('err').innerHTML = ""

        var name = document.getElementById('name').value
        var gender = document.getElementById('gender').value
        var email = document.getElementById('email').value
        var tel = document.getElementById('tel').value
        var CMND = document.getElementById('CMND').value
        if(name && gender && email && tel && CMND){
            fetch('/addCustomers', {
                method: "POST",
                headers: {
                    'Content-Type': 'application/json'
                },
                body:JSON.stringify({
                    name : name,
                    gender : gender,
                    CMND : CMND,
                    phone: tel,
                    email: email,
                    token:"<%= token %>"                            
                })
            })
            .then(req => req.json())
            .then(json => {
                if(json.code === 0){
                    document.getElementById('name').value = ''
                    document.getElementById('CMND').value = ''
                    document.getElementById('tel').value = ''
                    document.getElementById('email').value = ''
                    document.getElementById('gender').value = 0
                    document.getElementById('mess').innerHTML = 'add '+CMND+' succeed'
                }  
                else
                    document.getElementById('err').innerHTML = 'please check information again'
            })
            .catch(e => console.log(e))
        }
        else
            document.getElementById('err').innerHTML = 'please check information again'
    })
</script>